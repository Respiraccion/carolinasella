{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "palette": [
                {
                    "color": "#E8E8E4",
                    "name": "Fondo Principal",
                    "slug": "base"
                },
                {
                    "color": "#F1F1EF",
                    "name": "Gris Muy Claro Cálido",
                    "slug": "gris-muy-claro"
                },
                {
                    "color": "#D8D6D2",
                    "name": "Gris Niebla",
                    "slug": "gris-niebla"
                },
                {
                    "color": "#3A3A3A",
                    "name": "Grafito",
                    "slug": "grafito"
                },
                {
                    "color": "#5F6C73",
                    "name": "Azul Humo",
                    "slug": "azul-humo"
                },
                {
                    "color": "#A59BB3",
                    "name": "Violeta Polvo",
                    "slug": "violeta-polvo"
                },
                {
                    "color": "#FFFFFF",
                    "name": "Blanco",
                    "slug": "white"
                },
                {
                    "color": "#E5D5D5",
                    "name": "Bordó Claro",
                    "slug": "bordo-claro"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "'Bodoni Moda', serif",
                    "name": "Bodoni Moda",
                    "slug": "bodoni-moda"
                },
                {
                    "fontFamily": "'Cormorant Garamond', serif",
                    "name": "Cormorant Garamond",
                    "slug": "cormorant-garamond"
                },
                {
                    "fontFamily": "'Lato', sans-serif",
                    "name": "Lato",
                    "slug": "lato"
                },
                {
                    "fontFamily": "'EB Garamond', serif",
                    "name": "EB Garamond",
                    "slug": "eb-garamond"
                }
            ]
        },
        "spacing": {
            "blockGap": true,
            "padding": true,
            "margin": true
        },
        "appearanceTools": true
    },
    "styles": {
        "spacing": {
            "blockGap": "0",
            "padding": {
                "top": "0",
                "bottom": "0"
            },
            "margin": {
                "top": "0",
                "bottom": "0"
            }
        },
        "color": {
            "background": "var(--wp--preset--color--base)",
            "text": "var(--wp--preset--color--grafito)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--lato)",
            "fontSize": "1.125rem",
            "lineHeight": "1.8"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontWeight": "400",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--grafito)"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "clamp(2.5rem, 5vw, 4rem)",
                    "letterSpacing": "-0.02em"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "clamp(1.8rem, 3vw, 2.5rem)",
                    "fontWeight": "300"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "clamp(1.4rem, 2.5vw, 1.8rem)",
                    "fontWeight": "400"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--azul-humo)"
                },
                "typography": {
                    "textDecoration": "none"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--violeta-polvo)"
                    },
                    "typography": {
                        "textDecoration": "underline"
                    }
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--violeta-polvo)",
                    "text": "#ffffff"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--lato)",
                    "fontSize": "0.9rem",
                    "letterSpacing": "0.15em",
                    "textTransform": "uppercase"
                },
                "border": {
                    "radius": "0",
                    "color": "var(--wp--preset--color--violeta-polvo)",
                    "width": "1px",
                    "style": "solid"
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--violeta-polvo)",
                        "text": "var(--wp--preset--color--grafito)"
                    }
                }
            }
        },
        "blocks": {
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--bodoni-moda)",
                    "fontSize": "clamp(1.5rem, 3vw, 2rem)",
                    "fontWeight": "400",
                    "letterSpacing": "0.05em",
                    "textTransform": "uppercase"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--grafito)"
                        },
                        "typography": {
                            "textDecoration": "none"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--grafito)"
                            },
                            "typography": {
                                "textDecoration": "none"
                            }
                        }
                    }
                }
            },
            "core/paragraph": {
                "typography": {
                    "lineHeight": "1.8"
                }
            },
            "core/quote": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--eb-garamond)",
                    "fontStyle": "italic",
                    "fontSize": "1.25rem"
                },
                "color": {
                    "text": "var(--wp--preset--color--azul-humo)"
                }
            },
            "core/navigation": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--lato)",
                    "fontSize": "0.875rem",
                    "letterSpacing": "0.15em",
                    "textTransform": "none"
                }
            }
        }
    }
}